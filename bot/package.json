{
  "name": "habit-tracker-bot",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate:pg --config ../configs/drizzle.config.ts",
    "db:migrate": "tsx src/db/postgres/migrate.ts",
    "db:studio": "drizzle-kit studio --config ../configs/drizzle.config.ts"
  },
  "dependencies": {
    "@grammyjs/stateless-question": "^4.0.0",
    "@xstate/fsm": "^2.0.0",
    "drizzle-orm": "^0.29.0",
    "dotenv": "^16.3.1",
    "grammy": "^1.20.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.20.18",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}

